<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <!--[if !mso]><!-->
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!--<![endif]-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title></title>
  <!--[if (gte mso 9)|(IE)]>
  <style type="text/css">
    table {border-collapse: collapse !important;}
  </style>
  <![endif]-->
</head>
<body>

  <div class="header">
    <div class="button header">
      <img src="https://s3-us-west-1.amazonaws.com/evercase/default/evercase-logo-white-solid.jpg" />
      <!--<img src="http://drive.google.com/uc?export=view&id=0B-NSvIG_-LnRN3c5ZkRhZTBsME0" />-->
      <!--<img src="cid:MM420@LOGO" />-->
      <span>Matchmaker 420</span>
    </div>
  </div>

  <div class="body">

    <h1>An order has been placed!</h1>

    <p><a class="button" href="<%= appUrl %>/user/orders/manage;order=<%= order._id %>">Manage Order</a></p>

    <p><strong>#<%= order._id %></strong></p>

    <p>Ordered <strong><%= order.date %></strong></p>
    <% if (order.orderType && order.orderType === 'seller') { %>
    <p>Buyer <strong><%= order.buyerName %></strong></p>
    <% } %>
    <hr />

    <table width="100%">
      <% order.products.forEach(function(product) { %>
      <tr>
        <td>
          <%= product.name %> x <%= product.count %> <%= product.unit_size %> @ <%= product.price %>
        </td>
        <td align="right">
          $<%= product.total %>
        </td>
      </tr>
      <% }); %>
    </table>

    <hr />

    <h5>Delivery Address</h5>

    <p><strong><%= order.shipping_address.nickname %></strong></p>

    <p>
      <%= order.shipping_address.address_line_1 %>
      <% if(order.shipping_address.address_line_2) { %>
      , <%= order.shipping_address.address_line_2 %>
      <% } %>
      <br />
      <%= order.shipping_address.city %>, <%= order.shipping_address.state %> <%= order.shipping_address.zip %>
    </p>

    <p><%= order.delivery_time %></p>

    <hr />

    <table width="100%">
      <tr>
        <td>
          <strong>Order Total</strong>
        </td>
        <td align="right">
          <strong>$<%= order.summary.subtotal %></strong>
        </td>
      </tr>
    </table>

    <hr />

    <p><a class="button" href="<%= appUrl %>/user/orders/manage;order=<%= order._id %>">Manage Order</a></p>

  </div>
</body>
</html>
